{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Categorization",
      "options": {
        "variant": "stepper"
      },
      "elements": [
        {
          "type": "Category",
          "label": "Section 0: Template Title",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/categoryInput"
            }
          ]
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/templateTitle"
    },
    {
      "type": "Group",
      "label": "Section 1: Personal Details",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/name"
        },
        {
          "type": "Control",
          "scope": "#/properties/lastName"
        },
        {
          "type": "Control",
          "scope": "#/properties/likesMovies"
        },
        {
          "type": "Group",
          "label": "Section 1.1: Sub Group 1",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/name"
            },
            {
              "type": "Control",
              "scope": "#/properties/lastName"
            },
            {
              "type": "Control",
              "scope": "#/properties/likesMovies"
            }
          ]
        }
      ]
    },
    {
      "type": "Group",
      "label": "Section 2: Work Details",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/employmentStatus"
        }
      ]
    },
    {
      "type": "Group",
      "label": "Section 3: Movie Preferences",
      "rule": {
        "effect": "HIDE",
        "condition": {
          "scope": "#/properties/likesMovies",
          "schema": {
            "const": false
