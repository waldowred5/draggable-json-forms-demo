{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/templateTitle"
    },
    {
      "type": "Group",
      "label": "Section 1: Personal Details",
      "id": "blergenheim1",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/section0/properties/firstName"
        },
        {
          "type": "Control",
          "scope": "#/properties/section0/properties/lastName"
        },
        {
          "type": "Control",
          "scope": "#/properties/section0/properties/likesMovies"
        },
        {
          "type": "Group",
          "label": "Section 1.1: Home Address",
          "id": "blergenheim1.1",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/homeAddress"
            }
          ]
        },
        {
          "type": "Group",
          "label": "Section 1.2: Delivery Address",
          "id": "blergenheim1.2",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/deliveryAddress"
            }
          ]
        }
      ]
    },
    {
      "type": "Group",
      "label": "Section 2: Work Details",
      "id": "blergenheim2",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/employmentStatus"
        }
      ]
    },
    {
      "type": "Group",
      "label": "Section 3: Movie Preferences",
      "id": "blergenheim3",
      "rule": {
        "effect": "HIDE",
        "condition": {
          "scope": "#/properties/likesMovies",
          "schema": {
            "const": false
          }
        }
      },
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/favouriteMovie"
        }
      ]
    }
  ]
}
